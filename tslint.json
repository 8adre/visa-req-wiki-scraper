{
  "extends": "tslint:latest",
  "rules": {
    "array-type": [
      true,
      "array"
    ],
    "arrow-return-shorthand": true,
    "class-name": true,
    "curly": true,
    "import-spacing": true,
    "indent": {
      "options": [
        "spaces",
        2
      ],
      "severity": "warning"
    },
    "interface-name": true,
    "linebreak-style": [
      false,
      "LF"
    ],
    "max-classes-per-file": {
      "options": 1,
      "severity": "warning"
    },
    "max-file-line-count": {
      "options": 3000,
      "severity": "warning"
    },
    "max-line-length": {
      "options": 200,
      "severity": "warning"
    },
    "member-access": [
      true,
      "no-public"
    ],
    "member-ordering": [
      true,
      {
        "order": [
          "static-field",
          "instance-field",
          "constructor",
          "public-instance-method",
          "protected-instance-method",
          "private-instance-method"
        ]
      }
    ],
    "new-parens": true,
    "newline-before-return": true,
    "no-angle-bracket-type-assertion": false,
    "no-boolean-literal-compare": true,
    "no-consecutive-blank-lines": [
      true,
      1
    ],
    "no-console": {
      "options": "log",
      "severity": "warning"
    },
    "no-construct": true,
    "no-default-export": {
      "severity": "warning"
    },
    "no-duplicate-imports": true,
    "no-duplicate-variable": true,
    "no-empty": true,
    "no-empty-interface": true,
    "no-eval": true,
    "no-implicit-dependencies": false,
    "no-invalid-template-strings": true,
    "no-invalid-this": true,
    "no-irregular-whitespace": {
      "severity": "warning"
    },
    "no-mergeable-namespace": true,
    "no-misused-new": true,
    "no-shadowed-variable": true,
    "no-sparse-arrays": true,
    "no-string-literal": {
      "options": true,
      "severity": "warning"
    },
    "no-string-throw": true,
    "no-submodule-imports": false,
    "no-switch-case-fall-through": true,
    "no-unbound-method": true,
    "no-unnecessary-initializer": true,
    "no-unnecessary-type-assertion": true,
    "no-unsafe-finally": true,
    "no-unused-expression": [
      true,
      "allow-fast-null-checks",
      "allow-new"
    ],
    "no-unused-variable": [
      true,
      "check-parameters"
    ],
    "no-use-before-declare": true,
    "no-var-keyword": true,
    "no-var-requires": false,
    "no-void-expression": [
      true,
      "ignore-arrow-function-shorthand"
    ],
    "object-literal-key-quotes": [
      true,
      "as-needed"
    ],
    "object-literal-sort-keys": false,
    "one-variable-per-declaration": [
      true,
      "ignore-for-loop"
    ],
    "prefer-conditional-expression": true,
    "prefer-const": true,
    "prefer-template": [
      true,
      "allow-single-concat"
    ],
    "quotemark": {
      "options": "single",
      "severity": "warning"
    },
    "radix": {
      "severity": "warning"
    },
    "restrict-plus-operands": true,
    "semicolon": {
      "options": "always",
      "severity": "warning"
    },
    "trailing-comma": [
      true,
      {
        "multiline": "never",
        "singleline": "never"
      }
    ],
    "triple-equals": [
      true,
      "allow-null-check",
      "allow-undefined-check"
    ],
    "variable-name": [
      true,
      "check-format",
      "allow-leading-underscore",
      "ban-keywords"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-type",
      "check-preblock"
    ]
  }
}